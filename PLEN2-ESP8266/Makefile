ARDUINO_VARIANT    = nodemcuv2
SERIAL_PORT = /dev/ttyUSB0
TAG = V0.1
NODENAME = ArDomo23
FLASH_PARTITION=4M1M
GLOBAL_USER_LIBDIR=../libraries
USER_DEFINE= -DWITH_SPIFFS -DMQTT_KEEPALIVE=120 -DMQTT_MAX_PACKET_SIZE=1024 -D_NODENAME_=\"$(NODENAME)\" -DMAX_SSID=2 -D_SSID1_=\"SSID1\" -D_WIFI_PASSWORD1_=\"PASSWORD1\" -D_SSID2_=\"SSID2\" -D_WIFI_PASSWORD2_=\"PASSWORD2\"
include $(HOME)/Esp8266-Arduino-Makefile/espXArduino.mk
myota: $(BUILD_OUT)/$(TARGET).bin
	node $(HOME)/repo.git/domo.mqtt/utils/sendOTA.js -n $(NODENAME)  -b $(BUILD_OUT)/$(TARGET).bin


